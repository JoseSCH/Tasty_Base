<% provide(:titulo, "Categorias") %>
<div class="categorias-header">
  <h1 id="categorias">Categor√≠as de Recetas</h1>
</div>

<% if not @categorias.empty? %>
  <ul class="categorias-list">
    <% @categorias.each do |data| %>
      <li class="categorias-item">
        <h2><%= data["strCategory"] %></h2>
        <div class="categoria-content">
          <%= image_tag(data["strCategoryThumb"], class: "categoria-imagen") %>
          <div class="categoria-info">
            <%= simple_format(data["strCategoryDescription"]).gsub(/\n+/, "<br>").html_safe %>
            <%= link_to "Ver todas las recetas", recipes_by_category_meals_path(category: data["strCategory"]), class: "gray-button" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <h1>Ups. algo ha ido mal...</h1>
<% end %>

