<!-- app/views/meals/categories.html.erb -->

<h1>Categor√≠as de Recetas</h1>

<ul>
  <% @recipes_by_category.each do |category, recipes| %>
    <li>
      <h2><%= category %></h2>
      <ul>
        <% recipes.each do |recipe| %>
          <li><%= link_to recipe['strMeal'], show_details_path(id: recipe['idMeal']) %></li>
        <% end %>
      </ul>
      <%= link_to "Ver todas las recetas de #{category}", recipes_by_category_meals_path(category) %>
    </li>
  <% end %>
</ul>
