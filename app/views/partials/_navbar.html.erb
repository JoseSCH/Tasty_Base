 <div id="navbar" class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <a id="logo" href="#">
      <img src="#" alt="Logo">
    </a>
    <%= link_to "Inicio", root_path, class: "btn btn-link" %>
    <%= link_to "Categorias", categories_meals_path, class: "btn btn-link" %>
    <%= link_to "Recetas aleatorias", aleatorias_path, class: "btn btn-link" %>

    <%= form_tag(buscar_path, method: :get, class: "navbar-form navbar-right") do %>
      <div class="form-group">
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Buscar recetas..." %>
      </div>
      <%= submit_tag "Buscar", class: "btn btn-primary" %>
    <% end %>

    <% if signed_in? %>
      <%= link_to "Mi Lista", mi_lista_path, class: "btn btn-link navbar-text" %>
      <%= link_to "Salir", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: '¿Está seguro?' }, class: "btn btn-link navbar-link" %>
      <%= link_to "Editar Cuenta", edit_user_registration_path, class: "btn btn-link navbar-link" %>
      <%= link_to "Eliminar cuenta", registration_path(current_user), data: { turbo_method: :delete, turbo_confirm: "¿Está seguro que desea eliminar la cuenta?" }, class: "btn btn-link navbar-link" %>
    <% else %>
      <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-link navbar-link" %>
      <%= link_to "Ingresar", new_user_session_path, class: "btn btn-link navbar-link" %>
    <% end %>
  </div>
</div>